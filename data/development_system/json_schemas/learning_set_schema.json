{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Root",
  "type": "object",
  "properties": {
    "training_set": {
      "$ref": "#/definitions/dataset"
    },
    "validation_set": {
      "$ref": "#/definitions/dataset"
    },
    "test_set": {
      "$ref": "#/definitions/dataset"
    }
  },
  "definitions" : {
    "feature": {
      "type": "object",
      "properties": {
        "median_longitude": {
          "type": "number"
        },
        "median_latitude": {
          "type": "number"
        },
        "mean_diff_time": {
          "type": "number"
        },
        "mean_diff_amount": {
          "type": "number"
        },
        "median_targetIP": {
          "type": "number"
        },
        "median_destIP": {
          "type": "number"
        }
      },
      "required": [
        "median_longitude",
        "median_latitude",
        "mean_diff_time",
        "mean_diff_amount",
        "median_targetIP",
        "median_destIP"
      ]
    },
    "dataset" : {
      "type": "object",
      "properties": {
        "features": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/feature"
          }
        },
        "labels": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        }
      },
      "required": ["features","labels"]
    }
  },
  "required": [
    "training_set",
    "validation_set",
    "test_set"
  ]
}